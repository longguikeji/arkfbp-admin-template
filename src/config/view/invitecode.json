    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 10,
    "total": 0,
    "background": "",
    "action": "retrieve"
  },
  "dialogs": {
    "code": {
      "title": "新建",
      "items": [
        {
          "type": "Input",
          "label": "生成邀请码的用户赠送的天数",
          "prop": "user_present_day",
          "state": {
            "value": "",
            "type": "number"
          }
        },
        {
          "type": "Input",
          "label": "使用邀请码的用户赠送的天数",
          "prop": "use_user_present_day",
          "state": {
            "value": "",
            "type": "number"
          }
        },
        {
          "type": "AMap",
          "label": "地图组件",
          "prop": "position_map",
          "state": {
            "value": ["116.46", "39.92"]
          }
        }
      ],
      "actions": [
        {
          "label": "更新",
          "action": "updateCode",
          "type": "primary"
        }
      ],
      "visible": false
    },
    "testselect": {
      "title": "测试Select的相关事件",
      "visible": false,
      "items": [
        {
          "type": "Select",
          "label": "Select下拉框",
          "prop": "select_content",
          "state": {
            "value": 0,
            "options": [
              {
                "value": 0,
                "label": "关闭"
              },
              {
                "value": 1,
                "label": "打开"
              }
            ],
            "action": "openOrCloseBySelect"
          }
        },
        {
          "type": "Input",
          "label": "Input测试框",
          "prop": "input_content",
          "state": {
            "value": "",
            "disabled": false
          }
        }
      ]
    }
  },
  "actions": {
    "showCodeConfig": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.code.visible": true
          }
        }
      ],
      "next": [
        {
          "action": "getCodeConfig"
        }
      ]
    },
    "getCodeConfig": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "invite_code_set/edit/",
          "client_config": {
            "dialogs.code.items[prop=user_present_day].state.value": "data.result.user_present_day",
            "dialogs.code.items[prop=use_user_present_day].state.value": "data.result.use_user_present_day"
          }
        }
      ]
    },
    "updateCode": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "POST",
          "url": "invite_code_set/edit/",
          "request": {
            "user_present_day": "dialogs.code.items[prop=user_present_day].state.value",
            "use_user_present_day": "dialogs.code.items[prop=use_user_present_day].state.value"
          }
        }
      ],
      "next": [
        {
          "action": "getCodeConfig"
        }
      ]
    },
    "showSelectDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.testselect.visible": true
          }
        }
      ],
      "next": [
        {
          "action": "openOrCloseBySelect"
        }
      ]
    },
    "openOrCloseBySelect": {
      "flows": [
        {
          "name": "openOrCloseBySelect",
          "request": "dialogs.testselect.items"
        }
      ]
    }
  }
}