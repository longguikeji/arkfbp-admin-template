  "reliant_values": {
  },
  "actions": {
    "fetch": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "zhiya/video/[reliant_values.id]/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount",
            "param_title": "filter.items[prop=title].state.value",
            "param_begin_time": "filter.items[prop=begin_time].state.value",
            "param_end_time": "filter.items[prop=end_time].state.value",
            "param_is_valid": "filter.items[prop=is_valid].state.value"
          },
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    },
    "showCreateVideoDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.visible": true
          }
        },
        {
          "name": "arkfbp.flows.options",
          "type": "api",
          "method": "GET",
          "url": "speaker/drop/",
          "client_config": {
            "dialogs.create.items[prop=speaker_id].state.options": "data.items"
          }
        }
      ]
    },
    "createVideo": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "POST",
          "url": "zhiya/video/[reliant_values.id]/create/",
          "request": {
            "titlelanguage": "dialogs.create.items[prop=titlelanguage].state.value",
            "additional_share_count": "dialogs.create.items[prop=additional_share_count].state.value",
            "episode": "dialogs.create.items[prop=episode].state.value",
            "title": "dialogs.create.items[prop=title].state.value",
            "additional_play_count": "dialogs.create.items[prop=additional_play_count].state.value",
            "additional_collection_count": "dialogs.create.items[prop=additional_collection_count].state.value",
            "status": "dialogs.create.items[prop=status].state.value",
            "speaker_id": "dialogs.create.items[prop=speaker_id].state.value"
          }
        },
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.visible": false
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    },
    "showUpdateVideoDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": true
          }
        },
        {
          "name": "arkfbp.flows.options",
          "type": "api",
          "method": "GET",
          "url": "speaker/drop/",
          "client_config": {
            "dialogs.update.items[prop=speaker_id].state.options": "data.items"
          }
        },
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "zhiya/video/[reliant_values.id]/edit/",
          "client_config": {
            "dialogs.update.items[prop=title].state.value": "data.title",
            "dialogs.update.items[prop=titlelanguage].state.value": "data.titlelanguage",
            "dialogs.update.items[prop=additional_share_count].state.value": "data.additional_share_count",
            "dialogs.update.items[prop=episode].state.value": "data.episode",
            "dialogs.update.items[prop=additional_play_count].state.value": "data.additional_play_count",
            "dialogs.update.items[prop=additional_collection_count].state.value": "data.additional_collection_count",
            "dialogs.update.items[prop=status].state.value": "data.status",
            "dialogs.update.items[prop=speaker_id].state.value": "data.speaker_id"
          }
        }
      ]
    },
    "updateVideo": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "POST",
          "url": "zhiya/video/[reliant_values.id]/edit/",
          "request": {
            "title": "dialogs.update.items[prop=title].state.value",
            "titlelanguage": "dialogs.update.items[prop=titlelanguage].state.value",
            "additional_share_count": "dialogs.update.items[prop=additional_share_count].state.value",
            "episode": "dialogs.update.items[prop=episode].state.value",
            "additional_play_count": "dialogs.update.items[prop=additional_play_count].state.value",
            "additional_collection_count": "dialogs.update.items[prop=additional_collection_count].state.value",
            "status": "dialogs.update.items[prop=status].state.value",
            "speaker_id": "dialogs.update.items[prop=speaker_id].state.value"
          }
        },
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": false
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    },
    "deleteOneVideo": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "zhiya/video/<id>/delete/"
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    }
  }
}