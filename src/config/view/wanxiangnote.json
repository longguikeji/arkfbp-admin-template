{
  "created": {
    "actions": ["retrieve"]
  },
  "type": "form",
  "title": "笔记本管理",
  "buttons": [
    {
      "label": "更新",
      "action": "update",
      "type": "primary",
      "size": "small"
    }
  ],
  "form": {
    "items": [
      {
        "type": "Rich",
        "label": "笔记本内容",
        "prop": "content",
        "state": {
          "value": ""
        }
      }
    ]
  },
  "actions": {
    "retrieve": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "wanxiang/note/",
          "client_config": {
            "form.items[prop=content].state.value": "data.content"
          }
        }
      ]
    },
    "update": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "POST",
          "url": "wanxiang/note/",
          "request": {
            "content": "form.items[prop=content].state.value"
          }
        }
      ],
      "next": [
        {
          "action": "retrieve"
        }
      ]
    }
  }
}
