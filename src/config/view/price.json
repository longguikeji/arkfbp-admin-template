{
  "created": {
    "actions": [
      "fetch"
    ]
  },
  "type": "table",
  "title": "price",
  "buttons": [
    {
      "label": "创建",
      "action": "showCreateDialog",
      "type": "primary",
      "size": "small"
    }
  ],
  "filter": {
    "inline": true,
    "size": "mini",
    "items": [
      "product_id",
      {
        "type": "Button",
        "state": {
          "label": "搜索",
          "type": "primary",
          "action": "fetch"
        }
      }
    ]
  },
  "table": {
    "columns": [
      {
        "prop": "id"
      },
      {
        "prop": "product_id"
      },
      {
        "prop": "price"
      },
      {
        "prop": "created"
      },
      {
        "label": "操作",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "label": "编辑",
              "type": "primary",
              "action": "showUpdateDialog"
            },
            {
              "label": "删除",
              "type": "danger",
              "action": "delete"
            }
          ]
        }
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 10,
    "total": 0,
    "background": "",
    "action": "fetch"
  },
  "dialogs": {
    "create": {
      "title": "新建",
      "items": [
        "price",
        "product_id"
      ],
      "actions": [
        {
          "label": "确定",
          "action": "create",
          "type": "primary"
        }
      ],
      "visible": false
    },
    "update": {
      "titles": "编辑",
      "items": [
        "price",
        "product_id"
      ],
      "actions": [
        {
          "label": "确定",
          "action": "update",
          "type": "primary"
        }
      ],
      "visible": false
    }
  },
  "actions": {
    "fetch": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "priceinfo/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount",
            "param_name": "filter.items[prop=name].state.value",
            "param_product_id": "filter.items[prop=product_id].state.value",
            "param_type": "filter.items[prop=type_choice].state.value"
          },
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        },
        {
          "name": "flows.tableButton",
          "request": "table"
        }
      ]
    },
    
    "showCreateDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.visible": true
          }
        },
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "priceinfo/drop/",
          "client_config": {
            "dialogs.create.items[prop=price].state.value": "data.items"
          }
        },
        {
          "name": "changePriceOptions",
          "request": "dialogs.create.items[prop=price].state.value" 
        }
      ]
    },
    "showUpdateDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": true
          }
        },
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "priceinfo/<id>/edit/",
          "client_config": {
            "dialogs.update.items[prop=price].state.value": "data.result.price",
            "dialogs.update.items[prop=product_id].state.value": "data.result.product_id"
          }
        }
      ]
    },
    "create": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "POST",
          "url": "priceinfo/create/",
          "request": {
            "price": "dialogs.create.items[prop=price].state.value",
            "product_id": "dialogs.create.items[prop=product_id].state.value"
          }
        }
      ],
      "next": [
        {
          "action": "retrieve"
        }
      ]
    },
    "update": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "POST",
          "url": "/priceinfo/<id>/edit/",
          "request": {
            "price": "dialogs.update.items[prop=price].state.value",
            "product_id": "dialogs.update.items[prop=product_id].state.value"
          }
        }
      ],
      "next": [
        {
          "action": "retrieve"
        }
      ]
    },
    "delete": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "GET",
          "url": "/priceinfo/<id>/delete/"
        }
      ],
      "next": [
        {
          "action": "retrieve"
        }
      ]
    },
    "getPrice": {
      "flows": [
        
      ]
    }
  }
}