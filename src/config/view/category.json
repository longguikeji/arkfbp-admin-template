{
  "created": {
    "actions": ["retrieve"]
  },
  "type": "table",
  "title": "类别管理",
  "buttons": [
    {
      "label": "编辑",
      "action": "showUpdateDialogs",
      "type": "primary",
      "size": "small"
    }
  ],
  "filter": {
    "inline": true,
    "size": "mini",
    "items": [
      {
        "type": "Input",
        "prop": "title",
        "state": {
          "value": ""
        }
      },
      {
        "type": "Button",
        "state": {
          "label": "搜索",
          "type": "primary",
          "action": "retrieve"
        }
      }
    ]
  },
  "table": {
    "columns": [
      {
        "prop": "id"
      },
      {
        "prop": "title"
      },
      {
        "prop": "img_url",
        "scope": {
          "type": "ImageBox",
          "state": {}
        }
      },
      {
        "prop": "is_home",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": 0,
                "label": "否"
              },
              {
                "value": 1,
                "label": "是"
              }
            ]
          }
        }
      },
      {
        "label": "排序",
        "prop": "sort",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "icon": "el-icon-top",
              "type": "primary",
              "action": "upHandler"
            },
            {
              "icon": "el-icon-bottom",
              "type": "primary",
              "action": "downHandler"
            }
          ]
        }
      },
      {
        "label": "是否有效",
        "prop": "is_valid",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": 0,
                "label": "否"
              },
              {
                "value": 1,
                "label": "是"
              }
            ]
          }
        }
      },
      {
        "label": "操作",
        "prop": "action",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "label": "编辑",
              "type": "primary",
              "action": "showUpdateDialog"
            },
            {
              "label": "删除",
              "type": "danger",
              "action": "delete"
            }
          ]
        }
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 10,
    "total": 0,
    "background": "",
    "action": "retrieve"
  },
  "actions": {
    "retrieve": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "category/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount"
          },
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    }
  }
}
