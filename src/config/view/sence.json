  "actions": {
    "fetch": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "activity/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount",
            "param_title": "filter.items[prop=content].state.title",
            "param_valid": "filter.items[prop=begin_time].state.is_vaild",
            "param_activity_type": "filter.items[prop=end_time].state.activity_type",
            "param_recommended": "filter.items[prop=mobile].state.recommended"
          },
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    },
    "changeStatus": {
      "flows": [
        {
          "name": "arkfbp.flows.update",
          "type": "api",
          "method": "GET",
          "url": "activity/<id>/<status>/status"
        }
      ]
    },
    "showDetailsDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.details.visible": true
          }
        }
      ]
    },
    "showUpdateDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": true
          }
        },
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "url": "activity/<id>/edit/",
          "method": "GET",
          "client_config": {
            "dialogs.update.items[prop=video].state.value": "data.video",
            "dialogs.update.items[prop=title].state.value": "data.title",
            "dialogs.update.items[prop=periods].state.value": "data.periods",
            "dialogs.update.items[prop=pay_title].state.value": "data.pay_title",
            "dialogs.update.items[prop=check_code].state.value": "data.check_code",
            "dialogs.update.items[prop=activity_date].state.value": "data.activity_date",
            "dialogs.update.items[prop=city].state.value": "data.city",
            "dialogs.update.items[prop=activity_address].state.value": "data.activity_address",
            "dialogs.update.items[prop=video_cover].state.value": "data.video_cover",
            "dialogs.update.items[prop=cover].state.value": "data.cover",
            "dialogs.update.items[prop=video_cover_phone_jcrop].state.value": "data.video_cover_phone_jcrop",
            "dialogs.update.items[prop=cover_phone_jcrop].state.value": "data.cover_phone_jcrop",
            "dialogs.update.items[prop=activity_type].state.value": "data.activity_type",
            "dialogs.update.items[prop=content].state.value": "data.content",
            "dialogs.update.items[prop=video_content].state.value": "data.video_content",
            "dialogs.update.items[prop=buying_tips].state.value": "data.buying_tips",
            "dialogs.update.items[prop=map_position].state.value[0]": "data.latitude",
            "dialogs.update.items[prop=map_position].state.value[1]": "data.longitude"
          }
        }
      ]
    }
  }
