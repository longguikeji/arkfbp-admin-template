{
  "created": {
    "actions": ["retrieve"]
  },
  "type": "TablePage",
  "title": "类别管理",
  "buttons": [
    {
      "label": "新建",
      "action": "showCreateDialog",
      "type": "primary",
      "size": "small"
    }
  ],
  "filter": {
    "inline": true,
    "size": "mini",
    "items": [
      {
        "type": "Input",
        "label": "类别标题",
        "prop": "title",
        "state": {
          "value": ""
        }
      },
      {
        "type": "Select",
        "label": "是否有效",
        "prop": "is_valid",
        "state": {
          "value": "",
          "options": [
            {
              "value": 0,
              "label": "无效"
            },
            {
              "value": 1,
              "label": "有效"
            }
          ]
        }
      },
      {
        "type": "Select",
        "label": "是否显示在首页",
        "prop": "is_home",
        "state": {
          "value": "",
          "options": [
            {
              "value": 0,
              "label": "否"
            },
            {
              "value": 1,
              "label": "是"
            }
          ]
        }
      },
      {
        "type": "Button",
        "state": {
          "label": "搜索",
          "type": "primary",
          "action": "toFilter"
        }
      }
    ]
  },
  "table": {
    "columns": [
      {
        "label": "#",
        "prop": "id"
      },
      {
        "label": "类别标题",
        "prop": "title"
      },
      {
        "label": "类别图片",
        "prop": "img_url",
        "scope": {
          "type": "ImageBox",
          "state": {}
        }
      },
      {
        "label": "是否显示在首页",
        "prop": "is_home",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": 0,
                "label": "否"
              },
              {
                "value": 1,
                "label": "是"
              }
            ]
          }
        }
      },
      {
        "label": "是否有效",
        "prop": "is_valid",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": 0,
                "label": "否"
              },
              {
                "value": 1,
                "label": "是"
              }
            ]
          }
        }
      },
      {
        "label": "排序",
        "prop": "sort",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "icon": "el-icon-top",
              "type": "primary",
              "action": "upHandler"
            },
            {
              "icon": "el-icon-bottom",
              "type": "primary",
              "action": "downHandler"
            }
          ]
        }
      },
      {
        "label": "操作",
        "prop": "action",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "label": "编辑",
              "type": "primary",
              "action": "showUpdateDialog"
            },
            {
              "label": "删除",
              "type": "danger",
              "action": "delete"
            }
          ]
        }
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 10,
    "total": 0,
    "background": "",
    "action": "toFilter"
  },
  "dialogs": {
    "create": {
      "title": "新建",
      "items": [
        {
          "type": "Input",
          "label": "类别标题",
          "prop": "title",
          "state": {
            "value": ""
          }
        },
        {
          "type": "Select",
          "label": "是否显示在首页",
          "prop": "is_home",
          "state": {
            "value": "",
            "options": [
              {
                "value": 0,
                "label": "否"
              },
              {
                "value": 1,
                "label": "是"
              }
            ]
          }
        },
        {
          "type": "Upload",
          "label": "类别图片",
          "prop": "img",
          "state": {
            "type": "image",
            "value": ""
          }
        }
      ],
      "actions": [
        {
          "label": "新建类别",
          "action": "create",
          "close": true,
          "type": "primary"
        }
      ],
      "visible": false,
      "attributes": {}
    },
    "update": {
      "title": "编辑",
      "items": [
        {
          "type": "Input",
          "label": "类别标题",
          "prop": "title",
          "state": {
            "value": ""
          }
        },
        {
          "type": "Select",
          "label": "是否显示在首页",
          "prop": "is_home",
          "state": {
            "value": "",
            "options": [
              {
                "value": 0,
                "label": "否"
              },
              {
                "value": 1,
                "label": "是"
              }
            ]
          }
        },
        {
          "type": "Upload",
          "label": "类别图片",
          "prop": "img",
          "state": {
            "type": "image",
            "value": ""
          }
        }
      ],
      "actions": [
        {
          "label": "编辑类别",
          "action": "update",
          "close": true,
          "type": "primary"
        }
      ],
      "visible": false,
      "attributes": {}
    }
  },
  "actions": {
    "meta": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "url": "category/",
          "method": "GET",
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    },
    "toFilter": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "method": "GET",
          "url": "category/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount",
            "param_title": "filter.items[prop=title].state.value",
            "param_is_valid": "filter.items[prop=is_valid].state.value",
            "param_is_home": "filter.items[prop=is_home].state.value"
          },
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    },
    "showCreateDialog": {
      "flows": [
        {
          "name": "assign",
          "type": "assign",
          "client_config": {
            "dialogs.create.visible": true
          }
        }
      ]
    },
    "create": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "method": "POST",
          "url": "category/create/",
          "request": {
            "title": "dialogs.create.items[prop=title].state.value",
            "is_home": "dialogs.create.items[prop=is_home].state.value",
            "img": "dialogs.create.items[prop=img].state.value"
          }
        }
      ]
    },
    "showUpdateDialog": {
      "flows": [
        {
          "name": "assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": true
          }
        },
        {
          "name": "retrieve",
          "type": "api",
          "method": "GET",
          "url": "category/<id>/edit/",
          "client_config": {
            "dialogs.update.items[prop=title].state.value": "data.title",
            "dialogs.update.items[prop=is_home].state.options.value": "data.is_home",
            "dialogs.update.items[prop=img].state.value": "data.img"
          }
        }
      ]
    },
    "upHandler": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "method": "GET",
          "url": "category/<id>/up/"
        }
      ],
      "next": [
        {
          "name": "retrieve",
          "type": "api",
          "url": "category/",
          "method": "GET",
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    },
    "downHandler": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "method": "GET",
          "url": "category/<id>/down/"
        }
      ],
      "next": [
        {
          "name": "retrieve",
          "type": "api",
          "url": "category/",
          "method": "GET",
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    }
  }
}
