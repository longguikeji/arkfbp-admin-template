{
  "created": {
    "actions": ["fetch"]
  },
  "type": "table",
  "title": "演讲类别",
  "buttons": [
    {
      "label": "创建",
      "action": "showCreateDialog",
      "type": "primary",
      "size": "small"
    }
  ],
  "filter": {
    "inline": true,
    "size": "mini",
    "items": [
      {
        "type": "Input",
        "label": "演讲标题",
        "prop": "title",
        "state": {
          "value": ""
        }
      },
      {
        "type": "Input",
        "label": "讲者",
        "prop": "speaker_name",
        "state": {
          "value": ""
        }
      },
      {
        "type": "Button",
        "state": {
          "label": "搜索",
          "type": "primary",
          "action": "retrieve"
        }
      }
    ]
  },
  "table": {
    "columns": [
      {
        "label": "#",
        "prop": "id"
      },
      {
        "label": "演讲标题",
        "prop": "title"
      },
      { "label": "讲者", "prop": "speaker_name" },
      {
        "label": "演讲类别",
        "prop": "speechcategory",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "multiple": true,
            "readonly": true,
            "options": []
          }
        }
      },
      { "label": "演讲日期", "prop": "speechdate" },
      { "label": "播放量", "prop": "total_play_count" },
      {
        "label": "视频封面",
        "prop": "video_cover",
        "scope": {
          "type": "ImageBox",
          "state": {}
        }
      },
      {
        "label": "视频",
        "prop": "video",
        "scope": {
          "type": "Link",
          "state": {
            "value": ""
          }
        }
      },
      {
        "label": "音频",
        "prop": "audio",
        "scope": {
          "type": "Link",
          "state": {
            "value": ""
          }
        }
      },
      {
        "label": "状态",
        "prop": "status",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": 0,
                "label": "已发布"
              },
              {
                "value": 1,
                "label": "未发布"
              }
            ]
          }
        }
      },
      {
        "label": "推荐",
        "prop": "recommended",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": 0,
                "label": "未推荐"
              },
              {
                "value": 1,
                "label": "推荐"
              }
            ]
          }
        }
      },
      {
        "label": "操作",
        "format": "tableButtonStatus",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "label": "编辑",
              "type": "primary",
              "action": "showUpdateDialog"
            },
            {
              "label": "删除",
              "type": "danger",
              "action": "delete"
            }
          ]
        }
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 10,
    "total": 0,
    "background": "",
    "action": "retrieve"
  },
  "dialogs": {
    "create": {
      "title": "新建",
      "items": ["price", "product_id"],
      "actions": [
        {
          "label": "确定",
          "action": "create",
          "type": "primary"
        }
      ],
      "visible": false
    },
    "update": {
      "titles": "编辑",
      "items": ["price", "product_id"],
      "actions": [
        {
          "label": "确定",
          "action": "update",
          "type": "primary"
        }
      ],
      "visible": false
    }
  },
  "actions": {
    "fetch": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageSize"
          },
          "url": "speech/",
          "method": "GET",
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total",
            "pagination.currentPage": "data.page",
            "pagination.pageSize": "data.page_size"
          }
        }
      ]
    }
  }
}
