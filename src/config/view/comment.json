{
  "created": {
    "actions": [
      "fetch"
    ]
  },
  "type": "TablePage",
  "title": "comment",
  "buttons": [
    {
      "label": "创建",
      "action": "showCreateDialog",
      "type": "primary",
      "size": "small"
    }
  ],
  "filter": {
    "inline": true,
    "size": "mini",
    "items": [
      "content",
      {
        "type": "DatePicker",
        "label": "开始时间",
        "prop": "begin_time",
        "state": {
          "value": "",
          "valueFormat": "yyyy-MM-dd HH:mm",
          "format": "yyyy-MM-dd HH:mm",
          "type": "datetime"
        }
      },
      {
        "type": "DatePicker",
        "label": "结束时间",
        "prop": "end_time",
        "state": {
          "value": "",
          "format": "yyyy-MM-dd HH:mm",
          "valueFormat": "yyyy-MM-dd HH:mm",
          "type": "datetime"
        }
      },
      "mobile",
      {
        "type": "Button",
        "state": {
          "label": "搜索",
          "type": "primary",
          "action": "fetch"
        }
      },
      {
        "type": "Button",
        "state": {
          "label": "删除多个",
          "type": "danger",
          "action": "toMultipleDelete"
        }
      }
    ]
  },
  "table": {
    "selection": {
      "exist": true,
      "values": []
    },
    "columns": [
      {
        "prop": "id"
      },
      {
        "prop": "nickname"
      },
      {
        "prop": "content"
      },
      {
        "prop": "title"
      },
      {
        "prop": "is_selected",
        "scope": {
          "type": "Select",
          "state": {
            "value": "",
            "readonly": true,
            "options": [
              {
                "value": false,
                "label": "未精选"
              },
              {
                "value": true,
                "label": "已精选"
              }
            ]
          }
        }
      },
      {
        "prop": "created"
      },
      {
        "label": "操作",
        "prop": "action",
        "scope": {
          "type": "ButtonArray",
          "state": [
            {
              "label": "删除",
              "type": "danger",
              "action": "delete"
            },
            {
              "label": "精选",
              "action": "toSelect"
            },
            {
              "label": "回复",
              "action": "showReviewDialog"
            }
          ]
        }
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 10,
    "total": 0,
    "background": "",
    "action": "fetch"
  },
  "dialogs": {
    "review": {
      "title": "回复",
      "visible": false,
      "inline": false,
      "items": [
        {
          "type": "Input",
          "label": "演讲",
          "prop": "title",
          "state": {
            "value": "",
            "disabled": true
          }
        },
        {
          "type": "Input",
          "label": "内容",
          "prop": "content",
          "state": {
            "value": "",
            "disabled": true,
            "type": "textarea"
          }
        },
        {
          "type": "Select",
          "label": "发布身份",
          "prop": "profile_id",
          "state": {
            "value": "",
            "options": []
          }
        },
        {
          "type": "Input",
          "label": "回复内容",
          "prop": "review_content",
          "state": {
            "value": "",
            "type": "textarea"
          }
        }
      ],
      "actions": [
        {
          "label": "发布",
          "action": "toReview",
          "type": "primary"
        }
      ]
    }
  },
  "actions": {
    "fetch": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api",
          "method": "GET",
          "url": "comment/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount",
            "param_content": "filter.items[prop=content].state.value",
            "param_begin_time": "filter.items[prop=begin_time].state.value",
            "param_end_time": "filter.items[prop=end_time].state.value",
            "param_mobile": "filter.items[prop=mobile].state.value"
          },
          "client_config": {
            "table.data": "data.items",
            "pagination.total": "data.total"
          }
        }
      ]
    },
    "showReviewDialog": {
      "flows": [
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.review.visible": true
          }
        },
        {
          "name": "retrieve",
          "type": "api",
          "url": "comment/<id>/reply/",
          "method": "GET",
          "client_config": {
            "dialogs.review.items[prop=title].state.value": "data.result.title",
            "dialogs.review.items[prop=content].state.value": "data.result.content",
            "dialogs.review.items[prop=profile_id].state.options": "data.result.profiles",
            "dialogs.review.items[prop=title].label": "data.result.type"
          }
        },
        {
          "name": "changeProfilesOptions",
          "request": "dialogs.review.items[prop=profile_id].state"
        }
      ]
    },
    "toReview": {
      "flows": [
        {
          "name": "arkfbp.flows.fetch",
          "type": "api"
        },
        {
          "name": "arkfbp.flows.assign",
          "type": "assign",
          "client_config": {
            "dialogs.review.visible": false
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    },
    "toMultipleDelete": {
      "flows": [
        {
          "name": "flows.selection",
          "type": "api",
          "method": "POST",
          "url": "comment/delete/",
          "request": {
            "ids": "table.selection.values"
          }
        }
      ],
      "next": [
        {
          "action": "fetch"
        }
      ]
    }
  }
}