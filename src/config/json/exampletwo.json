{
  "created": {
    "actions": ["retrieve"]
  },
  "type": "table",
  "title": "演讲管理",
  "buttons": [
    {
      "label": "创建",
      "action": "showCreateDialog",
      "type": "primary",
      "size": "small",
      "data": {}
    }
  ],
  "filter": {
    "inline": true,
    "size": "mini",
    "items": [
      {
        "type": "Input",
        "label": "演讲标题",
        "prop": "title",
        "state": {
          "value": ""
        }
      },
      {
        "type": "Input",
        "label": "讲者",
        "prop": "speaker_name",
        "state": {
          "value": ""
        }
      },
      {
        "type": "DatePicker",
        "label": "开始时间",
        "prop": "begin_time",
        "state": {
          "value": ""
        }
      },
      {
        "type": "DatePicker",
        "label": "结束时间",
        "prop": "end_time",
        "state": {
          "value": ""
        }
      },
      {
        "type": "Select",
        "label": "状态",
        "prop": "status",
        "state": {
          "value": "",
          "options": [
            {
              "value": 0,
              "label": "未发布"
            },
            {
              "value": 1,
              "label": "已发布"
            }
          ]
        }
      },
      {
        "type": "Select",
        "label": "推荐",
        "prop": "recommended",
        "state": {
          "value": "",
          "options": [
            {
              "value": 0,
              "label": "未推荐"
            },
            {
              "value": 1,
              "label": "已推荐"
            }
          ]
        }
      },
      {
        "type": "Select",
        "label": "演讲类型",
        "prop": "speechcategory",
        "state": {
          "value": "",
          "options": [
            {
              "value": 0,
              "label": "未推荐"
            },
            {
              "value": 1,
              "label": "已推荐"
            }
          ]
        }
      },
      {
        "type": "Button",
        "state": {
          "label": "搜索",
          "type": "primary",
          "action": "toFilter"
        }
      }
    ]
  },
  "table": {
    "columns": [
      {
        "label": "#",
        "prop": "id"
      },
      {
        "label": "演讲标题",
        "prop": "title"
      },
      { "label": "讲者", "prop": "speaker_name" },
      {
        "label": "演讲类别",
        "prop": "speechcategory"
      },
      { "label": "演讲日期", "prop": "speechdate" },
      { "label": "播放量", "prop": "total_play_count" },
      {
        "label": "视频封面",
        "prop": "video_cover",
        "scope": {
          "type": "ImageBox",
          "state": {}
        }
      },
      {
        "label": "视频",
        "prop": "video"
      },
      {
        "label": "音频",
        "prop": "audio"
      },
      { "label": "状态", "prop": "status" },
      { "label": "推荐", "prop": "recommended" },
      {
        "label": "操作",
        "prop": "action",
        "scope": [
          {
            "label": "编辑",
            "type": "primary",
            "action": "showUpdateDialog",
            "data": {
              "id": 538
            }
          },
          {
            "label": "删除",
            "type": "danger"
          }
        ]
      }
    ],
    "data": []
  },
  "pagination": {
    "currentPage": 1,
    "pageCount": 20,
    "total": 100,
    "background": "",
    "action": "toFilter"
  },
  "dialogs": {
    "create": {
      "title": "新建",
      "items": [
        {
          "type": "input",
          "label": "标题",
          "prop": "title",
          "state": {
            "value": ""
          }
        },
        {
          "type": "input",
          "label": "题语(60字以内)",
          "prop": "title",
          "state": {
            "type":"textarea",
            "value": ""
          }
        }
      ],
      "values": {},
      "actions": [
        {
          "label": "确定",
          "action": "create",
          "close": true,
          "type": "primary"
        }
      ],
      "visible": false,
      "attributes": {}
    },
    "update": {
      "titles": "编辑",
      "items": [
        {
          "type": "input",
          "label": "标题",
          "prop": "title",
          "state": {
            "value": ""
          }
        }
      ],
      "values": {},
      "actions": [
        {
          "label": "确定",
          "action": "edit",
          "close": true,
          "type": "primary"
        }
      ],
      "visible": false,
      "attributes": {}
    }
  },
  "actions": {
    "meta": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "url": "speech/",
          "method": "GET",
          "client_config": {
            "table.data": "data.items"
          }
        }
      ]
    },
    "showCreateDialog": {
      "flows": [
        {
          "name": "assign",
          "type": "assign",
          "method": "GET",
          "client_config": {
            "dialogs.create.visible": true
          }
        }
      ]
    },
    "toFilter": {
      "flows": [
        {
          "name": "retrieve",
          "type": "api",
          "method": "GET",
          "url": "speech/",
          "request": {
            "page": "pagination.currentPage",
            "page_size": "pagination.pageCount",
            "param_title": "filter.title",
            "speaker_name": "filter.speaker_name",
            "param_begin_time": "filter.begin_time",
            "param_end_time": "filter.end_time",
            "param_status": "filter.status",
            "param_recommended": "filter.recommended",
            "param_speechcategory": "filter.speechcategory"
          },
          "client_config": {
            "table.data": "data.items"
          }
        }
      ]
    },
    "showUpdateDialog": {
      "flows": [
        {
          "name": "assign",
          "type": "assign",
          "client_config": {
            "dialogs.update.visible": true
          }
        },
        {
          "name": "retrieve",
          "type": "api",
          "method": "GET",
          "url": "speech/<id>/edit/",
          "client_config": {}
        }
      ]
    },
    "edit": {
      "flows": [
        {
          "name": "update",
          "type": "api",
          "method": "POST",
          "url": "speech/<id>/edit/",
          "request": {
            "title": ""
          }
        }
      ]
    },
    "delete": {
      "flows": [
        {
          "name": "update",
          "type": "api",
          "method": "GET",
          "url": "speech/<id>/delete/"
        }
      ]
    }
  }
}
