            "page_size": "dialogs.vedio.pagination.pageCount",
            "param_title": "dialogs.vedio.filter.items[prop=title].state.value",
            "param_begin_time": "dialogs.vedio.filter.items[prop=begin_time].state.value",
            "param_end_time": "dialogs.vedio.filter.items[prop=end_time].state.value",
            "param_is_valid": "dialogs.vedio.filter.items[prop=is_valid].state.value"
          },
          "client_config": {
